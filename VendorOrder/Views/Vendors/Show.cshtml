@{
  Layout = "_Layout";
}
<h1>@Model["vendor"].Name Orders</h1>
@using VendorOrder.Models;

@if (@Model["orders"].Count == 0)
{
  <p>No orders have been added yet!</p>
}
<ul>
@foreach (Order order in @Model["orders"])
{
  <li>@order.Title</li>
}
</ul>
<a href='/vendors/@Model["vendor"].Id/orders/new'><button class="btn btn-primary">Add Order</button></a>